{
  "name": "@athens/solidity",
  "private": true,
  "version": "0.0.1",
  "scripts": {
    "lint": "solhint contracts/**/*.sol",
    "build": "truffle compile && truffle migrate",
    "deploy:ropsten": "truffle compile && truffle migrate --network ropsten",
    "start": "node ./scripts/runner ./scripts/ganache.sh",
    "dev": "truffle develop",
    "test": "truffle test",
