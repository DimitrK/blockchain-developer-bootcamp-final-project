{
  "root": true,
  "env": {
    "browser": true,
    "commonjs": true,
    "mocha": true,
    "node": true,
    "jest": true,
    "es6": true
  },
  "settings": {
    "react": {
      "version": "16.8"
    }
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "arrowFunctions": true,
      "blockBindings": true,
      "classes": true,
      "defaultParams": true,
      "destructuring": true,
      "forOf": true,
      "generators": true,
      "objectLiteralComputedProperties": true,
      "objectLiteralShorthandMethods": true,
      "objectLiteralShorthandProperties": true,
      "restParams": true,
      "spread": true,
      "superInFunctions": true,
      "templateStrings": true,
      "unicodePointEscapes": true,
      "experimentalObjectRestSpread": true,
      "modules": true,
      "jsx": true
    }
  },
  "extends": [
    "prettier",
    "prettier/react"
  ],
  "plugins": [
    "jest",
    "react",
    "react-hooks"
  ],
  "rules": {
    "no-console": 1,
    "no-duplicate-case": 2,
    "no-extra-parens": 0,
    "accessor-pairs": 0,
    "block-scoped-var": 0,
    "complexity": 0,
    "default-case": 1,
    "no-eq-null": 0,
    "no-fallthrough": 0,
    "no-implicit-coercion": 0,
    "no-invalid-this": 0,
    "no-param-reassign": 0,
    "no-process-env": 0,
    "no-unused-expressions": 1,
    "no-useless-call": 1,
    "no-void": 0,
    "init-declarations": 0,
    "no-catch-shadow": 1,
    "no-undef": 2,
    "consistent-this": [1, "that"],
    "func-names": 0,
    "func-style": 0,
    "id-length": 0,
    "lines-around-comment": 0,
    "newline-after-var": 0,
    "no-inline-comments": 0,
    "no-nested-ternary": 0,
    "no-ternary": 0,
    "no-underscore-dangle": 0,
    "operator-linebreak": 0,
    "id-match": 0,
    "sort-vars": 0,
    "space-unary-ops": 0,
    "max-params": 0,
    "max-statements": 0,
    "no-cond-assign": [2, "except-parens"],
    "no-constant-condition": 2,
    "no-control-regex": 1,
    "no-debugger": 2,
    "no-dupe-args": 2,
    "no-dupe-keys": 2,
    "no-empty-character-class": 1,
    "no-empty": 1,
    "no-ex-assign": 1,
    "no-extra-boolean-cast": 1,
    "no-func-assign": 1,
    "no-inner-declarations": [1, "both"],
    "no-invalid-regexp": 2,
    "no-irregular-whitespace": 2,
    "no-negated-in-lhs": 1,
    "no-obj-calls": 1,
    "no-regex-spaces": 1,
    "no-sparse-arrays": 1,
    "no-unreachable": 1,
    "use-isnan": 1,
    "valid-typeof": 1,
    "no-unexpected-multiline": 1,
    "consistent-return": 0,
    "curly": [
      2,
      "all"
    ],
    "dot-notation": [
      1,
      {
        "allowKeywords": true,
        "allowPattern": ""
      }
    ],
    "eqeqeq": 1,
    "no-alert": 1,
    "no-caller": 1,
    "no-div-regex": 1,
    "no-else-return": 1,
    "no-eval": 2,
    "no-extend-native": 1,
    "no-extra-bind": 1,
    "no-implied-eval": 1,
    "no-iterator": 1,
    "no-labels": 1,
    "no-lone-blocks": 1,
    "no-loop-func": 1,
    "no-multi-str": 1,
    "no-native-reassign": 2,
    "no-new-func": 1,
    "no-new-wrappers": 1,
    "no-new": 1,
    "no-octal-escape": 1,
    "no-octal": 1,
    "no-proto": 1,
    "no-redeclare": [
      1,
      {
        "builtinGlobals": true
      }
    ],
    "no-script-url": 1,
    "no-self-compare": 1,
    "no-sequences": 1,
    "no-throw-literal": 0,
    "no-warning-comments": 0,
    "no-with": 2,
    "radix": 1,
    "vars-on-top": 0,
    "yoda": 0,
    "strict": [1, "never"],
    "no-delete-var": 1,
    "no-label-var": 1,
    "no-shadow-restricted-names": 1,
    "no-shadow": [
      2,
      {
        "hoist": "functions"
      }
    ],
    "no-undef-init": 1,
    "no-unused-vars": [1],
    "no-use-before-define": 2,
    "handle-callback-err": 1,
    "no-mixed-requires": 1,
    "no-new-require": 1,
    "no-path-concat": 1,
    "no-restricted-modules": [1, ""],
    "no-sync": 0,
    "max-nested-callbacks": [
      1,
      10
    ],
    "no-array-constructor": 1,
    "no-continue": 1,
    "no-lonely-if": 1,
    "no-new-object": 1,
    "no-unneeded-ternary": 1,
    "one-var": [1, "never"],
    "operator-assignment": [1, "never"],
    "padded-blocks": 0,
    "quote-props": 0,
    "spaced-comment": [
      1,
      "always"
    ],
    "max-depth": [
      1,
      4
    ],
    "no-bitwise": 0,
    "no-plusplus": 1,
    "arrow-parens": 0,
    "constructor-super": 1,
    "generator-star-spacing": 0,
    "no-class-assign": 1,
    "no-const-assign": 1,
    "no-this-before-super": 1,
    "no-var": 1,
    "object-shorthand": [1, "always"],
    "prefer-const": 1,
    "prefer-spread": 1,
    "prefer-reflect": 0,
    "require-yield": 1,
    "react/display-name": 0,
    "react/jsx-boolean-value": 1,
    "react/jsx-no-duplicate-props": 1,
    "react/jsx-no-undef": 1,
    "react/jsx-key": 1,
    "react/jsx-sort-props": 0,
    "react/jsx-uses-react": 1,
    "react/jsx-uses-vars": 1,
    "react/no-did-mount-set-state": 1,
    "react/no-did-update-set-state": 1,
    "react/no-multi-comp": 0,
    "react/no-unknown-property": 1,
    "react/react-in-jsx-scope": 1,
    "react/self-closing-comp": 1,
    "react/sort-comp": 1,
    "react/wrap-multilines": 0,
    "react/prop-types": 0,
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "off" // Disabled, as auto-fix can introduce subtle bugs (https://github.com/facebook/react/issues/16313).
  },
  "globals": {
    "chrome": true,
    "Promise": true,
    "expect": true
  }
}